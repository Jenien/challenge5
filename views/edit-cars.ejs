                                        <form class="requires-validation" id="carsForm" method="PUT" novalidate>
                                            <input type="hidden" id="id" name="id" value="<%= car.id %>">
                                            <div class="col-md-12">
                                              <input class="form-control" type="text" name="name" id="name" placeholder="Name" value="<%= car.name %>" required>

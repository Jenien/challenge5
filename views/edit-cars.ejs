                                            </div>
                                            <div class="col-md-12">
                                              <input class="form-control" type="text" name="startRent" id="startRent" placeholder="Start Rent" value="<%= car.startRent %>" readonly required>
                                            </div>
                                            <div class="col-md-12">
                                              <input class="form-control" type="text" name="finishRent" id="finishRent" placeholder="Finish Rent" value="<%= car.finishRent %>" readonly required>
                                            </div>
                                            <div class="col-md-12">
                                              <input class="form-control" type="text" name="createAt" id="createAt" placeholder="Created At" value="<%= car.createAt %>" readonly required>
                                            </div>
                                            <div class="col-md-12">
                                              <input class="form-control" type="text" name="updatedAt" id="updatedAt" placeholder="Updated At" value="<%= car.updatedAt %>" readonly required>
                                            </div>
                                            <div class="form-button mt-3">
